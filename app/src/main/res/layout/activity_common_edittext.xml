<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56.66"
        android:layout_gravity="center"
        android:background="@color/c_68E0A3">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_8.33"
            android:layout_marginRight="@dimen/dp_8.33"
            android:background="@drawable/act_et_bg">

            <EditText
                android:id="@+id/act_et"
                android:layout_width="@dimen/dp_303"
                android:layout_height="@dimen/dp_48"
                android:layout_gravity="left|center_vertical"
                android:background="@android:color/transparent"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLength="25"
                android:paddingLeft="@dimen/dp_16.33"
                android:singleLine="true" />

            <FrameLayout
                android:id="@+id/act_search_fl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dp_16.33">

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_gravity="center_vertical|left"
                    android:background="@drawable/act_btn_search_n" />
            </FrameLayout>
        </FrameLayout>

    </FrameLayout>
</FrameLayout>